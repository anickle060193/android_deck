<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="pref_name"
        android:title="@string/pref_title_name"
        android:defaultValue="@string/pref_default_name"
        android:selectAllOnFocus="true"
        android:inputType="textPersonName"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="pref_player_game_background"
        android:title="@string/pref_title_player_game_background"
        android:defaultValue="-1"
        android:entries="@array/background_names"
        android:entryValues="@array/background_names"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="pref_table_game_background"
        android:title="@string/pref_title_table_game_background"
        android:defaultValue="-1"
        android:entries="@array/background_names"
        android:entryValues="@array/background_names"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
